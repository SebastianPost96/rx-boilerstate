{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "rx-boilerstate": {
      "projectType": "library",
      "root": "projects/rx-boilerstate",
      "sourceRoot": "projects/rx-boilerstate/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/rx-boilerstate/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/rx-boilerstate/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/rx-boilerstate/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/rx-boilerstate/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    },
    "minesweeper": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "changeDetection": "OnPush"
        }
      },
      "root": "projects/minesweeper",
      "sourceRoot": "projects/minesweeper/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/minesweeper",
            "index": "projects/minesweeper/src/index.html",
            "main": "projects/minesweeper/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "projects/minesweeper/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": ["projects/minesweeper/src/favicon.ico", "projects/minesweeper/src/assets"],
            "styles": ["projects/minesweeper/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "minesweeper:build:production"
            },
            "development": {
              "browserTarget": "minesweeper:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "minesweeper:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "projects/minesweeper/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": ["projects/minesweeper/src/favicon.ico", "projects/minesweeper/src/assets"],
            "styles": ["projects/minesweeper/src/styles.scss"],
            "scripts": []
          }
        }
      }
    }
  }
}
